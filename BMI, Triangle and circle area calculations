#bmi calculation
name = input("Enter your full name: ")
age = int(input("Enter age: "))
weight = float(input("Enter your weight in kilograms: "))
height = float(input("Enter your height in meters: "))
bmi = weight / (height**2)
print(f"\n {name}, {age}
print(f"your bmi is {bmi:.2f}.")


# Area of a Triangle
base = float(input("Enter the base of the triangle (in cm): "))
height = float(input("Enter the height of the triangle (in cm): "))
triangle_area = 0.5 * base * height
print(f"\nThe area of the triangle is {triangle_area:.2f} square cm.")


# Area of a Circle
import math
radius = float(input("Enter the radius of the circle (in cm): "))
circle_area = math.pi * (radius ** 2)
print(f"\nThe area of the circle is {circle_area:.2f} square cm.")
